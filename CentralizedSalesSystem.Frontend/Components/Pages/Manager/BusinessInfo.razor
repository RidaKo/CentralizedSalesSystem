@layout CentralizedSalesSystem.Frontend.Components.Layout.EmptyLayout
@page "/manager/business/{Id:long}"
@using CentralizedSalesSystem.Frontend.Models
@inject HttpClient Http
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Business Info</PageTitle>

<div class="container mt-4">
    <!-- back button -->
    <div class="mb-4">
        <a href="/manager/dashboard" class="text-decoration-none text-secondary">
            <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
        <h3 class="mt-2">Service panel: "@(business.Name)"</h3>
    </div>

    <div class="row">
        <!-- main info column -->
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white border-bottom-0 pt-3">
                    <h5 class="fw-bold">Info</h5>
                </div>
                <div class="card-body">
                    
                    @if (isLoading)
                    {
                        <div class="spinner-border text-primary" role="status"></div>
                    }
                    else
                    {
                        <!-- service type -->
                        <div class="mb-3">
                            <span class="badge bg-light text-dark border p-2">
                                @if(business.SubscriptionPlan == "beauty") 
                                { 
                                    <i class="bi bi-scissors me-1"></i> <span>Beauty services</span>
                                }
                                else 
                                { 
                                    <i class="bi bi-egg-fried me-1"></i> <span>Food services</span>
                                }
                            </span>
                        </div>

                        <!-- general info -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="text-muted small">Owner user email</label>
                                <div class="form-control-plaintext fw-bold">@business.Email</div>
                            </div>
                            <div class="col-md-6">
                                <label class="text-muted small">Currency</label>
                                <div class="form-control-plaintext fw-bold">@business.Currency</div>
                            </div>
                        </div>

                        <hr />

                        <!-- editable form -->
                        <div class="mb-3">
                            <label class="form-label text-muted small">Company Name</label>
                            <div class="input-group">
                                <input type="text" class="form-control" @bind="business.Name" />
                                <span class="input-group-text"><i class="bi bi-pencil"></i></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label text-muted small">Address</label>
                            <div class="input-group">
                                <input type="text" class="form-control" @bind="business.Address" />
                                <span class="input-group-text"><i class="bi bi-pencil"></i></span>
                            </div>
                        </div>

                         <div class="mb-3">
                            <label class="form-label text-muted small">Phone</label>
                            <div class="input-group">
                                <input type="text" class="form-control" @bind="business.Phone" />
                                <span class="input-group-text"><i class="bi bi-pencil"></i></span>
                            </div>
                        </div>

                        <!-- save button -->
                        <div class="mt-4 d-flex justify-content-end gap-2">
                             @if (!string.IsNullOrEmpty(statusMessage))
                             {
                                 <span class="text-success align-self-center me-3">@statusMessage</span>
                             }
                             <button class="btn btn-primary" @onclick="SaveChanges">Save Changes</button>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- right column (placeholder for working hours) -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 p-4 bg-light text-muted text-center h-100 d-flex justify-content-center align-items-center">
                 <div>
                     <i class="bi bi-clock fs-1 mb-2 d-block"></i>
                     <span>Working hours management</span>
                 </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public long Id { get; set; }

    private BusinessDTO business = new BusinessDTO();
    private bool isLoading = true;
    private string statusMessage = "";

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // try fetching from API
            business = await Http.GetFromJsonAsync<BusinessDTO>($"businesses/{Id}") ?? new BusinessDTO();
        }
        catch
        {
            // mock data (if API is empty)
            if (Id == 2) 
            {
                // mock for beauty salon
                business = new BusinessDTO 
                { 
                    Id = Id, 
                    Name = "Beauty Salon", 
                    Address = "Lithuania, Kaunas, Kauno g. 1",
                    Email = "kaunasbeauty@example.com",
                    Currency = "EUR",
                    SubscriptionPlan = "beauty",
                    Phone = "+370 (333) 22 111"
                };
            }
            else 
            {
                // mock for restaurant
                business = new BusinessDTO 
                { 
                    Id = Id, 
                    Name = "Restaurant", 
                    Address = "Lithuania, Vilnius, Vilniaus g. 1",
                    Email = "vilniusrest@example.com",
                    Currency = "EUR",
                    SubscriptionPlan = "catering",
                    Phone = "+370 (111) 22 333"
                };
            }
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task SaveChanges()
    {
        statusMessage = "Saving...";
        try
        {
            var response = await Http.PatchAsJsonAsync($"/businesses/{Id}", business);
            if (response.IsSuccessStatusCode)
                statusMessage = "✅ Changes saved successfully!";
            else
                statusMessage = "❌ Error saving changes.";
        }
        catch
        {
            // if API is down just pretend to save it
            statusMessage = "⚠️ Saved (Mock Mode)";
        }
    }
}