@using CentralizedSalesSystem.Frontend.Models
@using CentralizedSalesSystem.Frontend.Json
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@inject HttpClient Http
@inject ISnackbar Snackbar

<MudTable Items="@_taxes" Hover="true" Striped="true" Dense="true" Elevation="0">
    <ToolBarContent>
        <MudText Typo="Typo.h6">Tax Rules</MudText>
        <MudSpacer />
        <MudButton Variant="Variant.Filled" Color="Color.Success" StartIcon="@Icons.Material.Filled.Add" OnClick="CreateTaxAsync">
            Add Tax
        </MudButton>
    </ToolBarContent>
    <HeaderContent>
        <MudTh>Name</MudTh>
        <MudTh>Rate</MudTh>
        <MudTh>Effective From</MudTh>
        <MudTh>Status</MudTh>
        <MudTh Style="text-align:right">Actions</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Name">@context.Name</MudTd>
        <MudTd DataLabel="Rate">@context.Rate.ToString("0.##")%</MudTd>
        <MudTd DataLabel="Effective">@context.EffectiveFrom.ToString("yyyy-MM-dd")</MudTd>
        <MudTd DataLabel="Status">
            @if(context.Status == TaxStatus.Active)
            {
                <MudChip T="string" Color="Color.Success" Size="Size.Small">Active</MudChip>
            }
            else
            {
                <MudChip T="string" Color="Color.Default" Size="Size.Small">Inactive</MudChip>
            }
        </MudTd>
        <MudTd DataLabel="Actions" Style="text-align:right">
            <MudIconButton Icon="@Icons.Material.Filled.Delete" Size="Size.Small" Color="Color.Error" OnClick="@(async () => await DeleteTax(context))" />
        </MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>

@code {
    [Parameter] public long BusinessId { get; set; }
    private List<Tax> _taxes = new();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var response = await Http.GetAsync($"taxes?filterByBusinessId={BusinessId}&limit=100");
            if (response.IsSuccessStatusCode)
            {
                var payload = await HttpJsonDefaultsExtensions.ReadFromJsonAsync<PaginatedResponse<Tax>>(response.Content);
                if (payload?.Data != null) _taxes = payload.Data;
            }
            else
            {
                var reason = $"{(int)response.StatusCode} {response.ReasonPhrase}";
                Snackbar.Add($"Failed to load taxes: {reason}", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Unable to load taxes: {ex.Message}", Severity.Error);
            Console.WriteLine($"API Fetch Failed: {ex.Message}");
        }
    }

    private async Task CreateTaxAsync()
    {
        var newTax = new Tax 
        { 
            BusinessId = BusinessId, 
            Name = "New Tax Rule", 
            Rate = 5m, 
            EffectiveFrom = DateTimeOffset.UtcNow,
            Status = TaxStatus.Active 
        };

        try 
        {
            var payload = new TaxCreateRequest
            {
                BusinessId = newTax.BusinessId,
                Name = newTax.Name,
                Rate = newTax.Rate,
                EffectiveFrom = newTax.EffectiveFrom,
                EffectiveTo = newTax.EffectiveTo,
                Status = newTax.Status
            };

            var response = await Http.PostAsJsonAsync("taxes", payload);
            
            if (response.IsSuccessStatusCode)
            {
                var createdTax = await HttpJsonDefaultsExtensions.ReadFromJsonAsync<Tax>(response.Content);
                if (createdTax != null)
                {
                    _taxes.Add(createdTax);
                    Snackbar.Add("Tax Saved to Database!", Severity.Success);
                }
            }
            else
            {
                var reason = $"{(int)response.StatusCode} {response.ReasonPhrase}";
                Snackbar.Add($"Failed to save tax: {reason}", Severity.Error);
            }
        }
        catch (Exception)
        {
            Snackbar.Add("Unable to save tax.", Severity.Error);
        }
    }

    private async Task DeleteTax(Tax tax)
    {
        try
        {
            var response = await Http.DeleteAsync($"taxes/{tax.Id}");
            if (response.IsSuccessStatusCode)
            {
                _taxes.Remove(tax);
                Snackbar.Add($"Deleted {tax.Name}", Severity.Success);
            }
            else
            {
                var reason = $"{(int)response.StatusCode} {response.ReasonPhrase}";
                Snackbar.Add($"Failed to delete {tax.Name}: {reason}", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Unable to delete {tax.Name}: {ex.Message}", Severity.Error);
        }
    }

    private sealed class TaxCreateRequest
    {
        public string Name { get; set; } = string.Empty;
        public decimal Rate { get; set; }
        public DateTimeOffset EffectiveFrom { get; set; }
        public DateTimeOffset? EffectiveTo { get; set; }
        public TaxStatus Status { get; set; }
        public long BusinessId { get; set; }
    }
}
