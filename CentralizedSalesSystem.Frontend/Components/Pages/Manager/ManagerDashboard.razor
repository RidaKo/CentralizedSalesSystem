@layout CentralizedSalesSystem.Frontend.Components.Layout.EmptyLayout
@page "/manager/dashboard"
@rendermode InteractiveServer

<PageTitle>Dashboard</PageTitle>

<div class="container mt-5">
    <!-- header -->
    <div class="d-flex align-items-center mb-4">
        <h3>Subscriptions & Payments</h3>
    </div>
    
    <h5 class="mb-3 text-muted">Subscriptions</h5>
    <hr />

    <div class="row mt-4">
        <!-- food service -->
        <div class="col-md-6">
            <div class="card p-3 mb-3 border shadow-sm h-100">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="fw-bold m-0"><i class="bi bi-egg-fried me-2"></i> Food services</h5>
                    <button class="btn-close"></button>
                </div>
                <div class="card-body p-0">
                    <p class="small mb-1">Business name: <strong>Restaurant</strong></p>
                    <p class="small mb-1">Location: Lithuania, Vilnius, Vilniaus g. 1</p>
                    <p class="small mb-1">Next payment: 2026, December 27th</p>
                    <p class="small mb-3">Payment amount: €5000.00</p>

                    <div class="d-flex gap-2 mt-auto">
                        <button class="btn btn-primary flex-grow-1" style="background-color: #4a90e2;">Management panel</button>
                        <button class="btn btn-danger" style="background-color: #e57373; border: none;">Plan settings</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- beauty service -->
        <div class="col-md-6">
            <div class="card p-3 mb-3 border shadow-sm h-100">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="fw-bold m-0"><i class="bi bi-scissors me-2"></i> Beauty services</h5>
                    <button class="btn-close"></button>
                </div>
                <div class="card-body p-0">
                    <p class="small mb-1">Business name: <strong>Beauty Salon</strong></p>
                    <p class="small mb-1">Location: Lithuania, Kaunas, Kauno g. 1</p>
                    <p class="small mb-1">Next payment: 2026, December 27th</p>
                    <p class="small mb-3">Payment amount: €5000.00</p>

                    <div class="d-flex gap-2 mt-auto">
                        <button class="btn btn-primary flex-grow-1" style="background-color: #4a90e2;">Management panel</button>
                        <button class="btn btn-danger" style="background-color: #e57373; border: none;">Plan settings</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- add plan button -->
    <div class="mt-2">
        <button class="btn btn-outline-secondary w-100" style="max-width: 150px;">Add plan</button>
    </div>

    <!-- payment method section -->
    <div class="mt-5">
        <h5>Payment</h5>
        <div class="card p-3 mt-3 border shadow-sm" style="max-width: 400px;">
            <div class="d-flex align-items-center mb-3">
                <i class="bi bi-credit-card-2-front fs-1 me-3"></i>
                <div>
                    <div class="fw-bold">MasterCard •••• 6767</div>
                    <div class="text-muted small">Exp: 12/28</div>
                </div>
            </div>
            <button class="btn btn-outline-dark btn-sm w-100">Change</button>
        </div>
    </div>
</div>

